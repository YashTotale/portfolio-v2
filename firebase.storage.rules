rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }

    match /users/{userId}/{docId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}
